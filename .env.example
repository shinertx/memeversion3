# MemeSnipe v25 - Environment Configuration
# --- CRITICAL SECURITY & MODE ---
PAPER_TRADING_MODE=true
WALLET_KEYPAIR_FILENAME=my_wallet.json
JITO_AUTH_KEYPAIR_FILENAME=jito_auth_key.json

# --- NETWORK & SERVICE URLS ---
SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_API_KEY_HERE
JITO_RPC_URL=https://mainnet.block-engine.jito.wtf/api
SIGNER_URL=http://signer:8989

# --- DATA PROVIDER API KEYS (REQUIRED FOR LIVE DATA) ---
HELIUS_API_KEY=YOUR_HELIUS_API_KEY_HERE
PYTH_API_KEY=YOUR_PYTH_API_KEY_HERE
TWITTER_BEARER_TOKEN=YOUR_TWITTER_BEARER_TOKEN_HERE
DRIFT_API_URL=https://api.drift.trade
FARCASTER_API_URL=YOUR_FARCASTER_API_URL_HERE

# --- DATA VALIDATION & INTEGRITY (RED TEAM AUDIT FIXES) ---
# Data must be newer than this (milliseconds) to be considered valid
MAX_DATA_AGE_MS=500
# Maximum price deviation between sources before flagging as invalid
MAX_PRICE_DEVIATION=0.05
# Invalid data ratio that triggers circuit breaker
CIRCUIT_BREAKER_THRESHOLD=0.30
# Enable enhanced execution simulation with realistic slippage
ENABLE_ENHANCED_SIMULATION=true

# --- TRADING STRATEGY & RISK ---
INITIAL_CAPITAL_USD=200.00
GLOBAL_MAX_POSITION_USD=50.0
PORTFOLIO_STOP_LOSS_PERCENT=25.0
TRAILING_STOP_LOSS_PERCENT=15.0

# --- EXECUTION SETTINGS ---
JUPITER_API_URL=https://quote-api.jup.ag/v6
SLIPPAGE_BPS=30
JITO_TIP_LAMPORTS=10000

# --- MONITORING & LOGGING ---
LOG_LEVEL=info
DASHBOARD_PORT=8080
GRAFANA_PORT=3000

# --- DATABASE ---
DATABASE_PATH=/app/shared/trades_v25.db
HISTORICAL_DATA_PATH=/app/shared/historical_data

# --- REDIS ---
REDIS_URL=redis://redis:6379

# --- PORTFOLIO MANAGER SPECIFIC ---
BACKTESTING_PLATFORM_API_KEY=demo_key_simulation_only
MIN_SHARPE_FOR_PROMOTION=1.5
STRATEGY_PROMOTION_INTERVAL_SECS=300
REBALANCE_INTERVAL_SECS=300

# --- POSTGRES (FOR FUTURE USE) ---
DB_PASSWORD=your_secure_password_here

# --- GENETIC ALGORITHM SETTINGS ---
POPULATION_SIZE=50
MUTATION_RATE=0.1
CROSSOVER_RATE=0.7
TOURNAMENT_SIZE=5
TOP_SURVIVORS_RATIO=0.2

# --- STRATEGY VALIDATION & PROMOTION (RED TEAM AUDIT) ---
# Minimum Sharpe ratio required for strategy promotion from simulation to paper trading
MIN_SHARPE_FOR_PROMOTION=1.5
# How often to check for strategy promotions (seconds)
STRATEGY_PROMOTION_INTERVAL_SECS=300
